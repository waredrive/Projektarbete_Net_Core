@model ForumManagementLockedThreadsVm
@{
  ViewBag.Title = "All Locked Threads";
}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <div class="row mt-4">
        <div class="col-md-12">
          <h4 class="text-center text-light mb-3">All Locked Threads</h4>
          <partial name="_LockedThreadsTablePartial" for="@Model.LockedThreads" />
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <partial name="_StatisticsPartial" for="@Model.Statistics" />
    </div>
  </div>
</div>

@section footer {
  @await Component.InvokeAsync("Footer")
}
