@model List<ForumManagementLockedPostVm>

<table class="table table-striped table-dark">
  @foreach (var post in Model) {
    <tr>
      <td style="width: 30%" class="align-middle">
        <a asp-controller="Post" asp-action="index" asp-route-threadId="@post.ThreadId" asp-fragment="@post.PostId" class="light">        <p class="pb-0 mb-0">In Thread: @post.ThreadText</p></a>
      </td>
      <td style="width: 1%;" class="align-middle pr-0">
        <img class="rounded float-left" src="data:image;base64,@post.CreatorProfileImage" alt="Profile picture" style="width: 50px; height: 50px"/>
      </td>
      <td style="width: 19%" class="align-middle">
        <p class="pb-0 mb-0 small">
          Created by: <a asp-controller="Profile" asp-action="Details" asp-route-username="@post.CreatedBy" class="light">@post.CreatedBy</a>
        </p>
        <p class="pb-0 mb-0 small">
          Created on: @post.CreatedOn
        </p>
      </td>           
      <td style="width: 1%;" class="align-middle pr-0">
        <img class="rounded float-left" src="data:image;base64,@post.LockerProfileImage" alt="Profile picture" style="width: 50px; height: 50px"/>
      </td>
      <td style="width: 19%" class="align-middle">
        <p class="pb-0 mb-0 small">
          Locked by: <a asp-controller="Profile" asp-action="Details" asp-route-username="@post.LockedBy" class="light">@post.LockedBy</a>
        </p>
        <p class="pb-0 mb-0 small">
          Locked on: @post.LockedOn
        </p>
      </td>
      <td style="width: 20%" class="align-middle">
        <div class="btn-group">
          @if (post.IsAuthorizedForPostEditAndDelete) {
            <a asp-controller="Post" asp-action="Edit" asp-route-threadId="@post.ThreadId" asp-route-id="@post.PostId" class="btn btn-primary btn-sm">Edit</a>
          }
          @if (post.IsAuthorizedForPostLock) {
            if (post.LockedBy == null) {
              <a asp-controller="Post" asp-action="Lock" asp-route-threadId="@post.ThreadId" asp-route-id="@post.PostId" class="btn btn-warning btn-sm">Lock</a>
            } else {
              <a asp-controller="Post" asp-action="Unlock" asp-route-threadId="@post.ThreadId" asp-route-id="@post.PostId" class="btn btn-warning btn-sm">Unlock</a>
            }
          }
          @if (post.IsAuthorizedForPostEditAndDelete) {
            <a asp-controller="Post" asp-action="Delete" asp-route-threadId="@post.ThreadId" asp-route-id="@post.PostId" class="btn btn-danger btn-sm">Delete</a>
          }
        </div>
      </td>
    </tr>
  }
</table>