@model ForumManagementLockedTopicsVm
@{
  ViewBag.Title = $"Topics Locked By {Model.UserName}";
}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <div class="row mt-4">
        <div class="col-md-12">
          <h4 class="text-center text-light mb-3">Topics Locked By @Model.UserName @if (Model.UserName == User.Identity.Name) {<span>(You)</span>}</h4>
          <partial name="_LockedTopicsTablePartial" for="@Model.LockedTopics" />
          <partial name="_PaginationPartial" for="@Model.Pager" />
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <partial name="_StatisticsPartial" for="@Model.Statistics" />
    </div>
  </div>
</div>

@section footer {
  @await Component.InvokeAsync("Footer")
}

@section scripts {
  <partial name="_StatisticsScriptsPartial" />
}