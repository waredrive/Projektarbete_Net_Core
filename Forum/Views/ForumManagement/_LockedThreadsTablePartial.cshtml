@model List<ForumManagementLockedThreadVm>

<table class="table table-striped table-dark">
  @foreach (var thread in Model) {
    <tr>
      <td style="width: 30%" class="align-middle">
        <a asp-controller="Post" asp-action="index" asp-route-threadId="@thread.ThreadId" class="light">
          <p class="pb-0 mb-0">@thread.ThreadText</p>
        </a>
      </td>
      <td style="width: 1%;" class="align-middle pr-0">
        <img class="rounded float-left" src="data:image;base64,@thread.CreatorProfileImage" alt="Profile picture" style="width: 50px; height: 50px"/>
      </td>
      <td style="width: 19%" class="align-middle">
        <p class="pb-0 mb-0 small">
          Created by: <a asp-controller="Profile" asp-action="Details" asp-route-username="@thread.CreatedBy" class="light">@thread.CreatedBy</a>
        </p>
        <p class="pb-0 mb-0 small">
          Created on: @thread.CreatedOn
        </p>
      </td>
      <td style="width: 1%;" class="align-middle pr-0">
        <img class="rounded float-left" src="data:image;base64,@thread.LockerProfileImage" alt="Profile picture" style="width: 50px; height: 50px"/>
      </td>
      <td style="width: 19%" class="align-middle">
        <p class="pb-0 mb-0 small">
          Locked by: <a asp-controller="Profile" asp-action="Details" asp-route-username="@thread.LockedBy" class="light">@thread.LockedBy</a>
        </p>
        <p class="pb-0 mb-0 small">
          Locked on: @thread.LockedOn
        </p>
      </td>
      <td style="width: 20%" class="align-middle">
        <div class="btn-group">
          @if (thread.IsAuthorizedForThreadEdit) {
            <a asp-controller="Thread" asp-action="Edit" asp-route-topicId="@thread.TopicId" asp-route-id="@thread.ThreadId" class="btn btn-primary btn-sm">Edit</a>
          }
          @if (thread.IsAuthorizedForThreadLock) {
            if (thread.LockedBy == null) {
              <a asp-controller="Thread" asp-action="Lock" asp-route-topicId="@thread.TopicId" asp-route-id="@thread.ThreadId" class="btn btn-warning btn-sm">Lock</a>
            } else {
              <a asp-controller="Thread" asp-action="Unlock" asp-route-topicId="@thread.TopicId" asp-route-id="@thread.ThreadId" class="btn btn-warning btn-sm">Unlock</a>
            }
          }
          @if (thread.IsAuthorizedForThreadDelete) {
            <a asp-controller="Thread" asp-action="Delete" asp-route-topicId="@thread.TopicId" asp-route-id="@thread.ThreadId" class="btn btn-danger btn-sm">Delete</a>
          }
        </div>
      </td>
    </tr>
  }
</table>