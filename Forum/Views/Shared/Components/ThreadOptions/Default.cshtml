@model ThreadOptionsVm

<div class="btn-group">
  @if (@Model.IsAuthorizedForThreadEdit) {
    <a asp-controller="Thread" asp-action="Edit" asp-route-id="@Model.ThreadId" asp-route-topicId="@Model.TopicId" class="btn btn-primary btn-sm">Edit</a>
  }
  @if (Model.IsAuthorizedForThreadLock) {
    if (Model.LockedOn == null) {
      <a asp-controller="Thread" asp-action="Lock" asp-route-id="@Model.ThreadId" asp-route-topicId="@Model.TopicId"  class="btn btn-warning btn-sm">Lock</a>
    } else {
      <a asp-controller="Thread" asp-action="Unlock" asp-route-id="@Model.ThreadId" asp-route-topicId="@Model.TopicId"  class="btn btn-warning btn-sm">Unlock</a>
    }
  }
  @if (Model.IsAuthorizedForThreadDelete) {
    <a asp-controller="Thread" asp-action="Delete" asp-route-id="@Model.ThreadId" asp-route-topicId="@Model.TopicId"  class="btn btn-danger btn-sm">Delete</a>
  }
</div>