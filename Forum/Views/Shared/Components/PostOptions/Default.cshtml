@model PostOptionsVm

<div class="btn-group">
  @if (@Model.IsAuthorizedForPostEditAndDelete) {
    <a asp-controller="Post" asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-primary btn-sm">Edit</a>
  }
  @if (Model.IsAuthorizedForPostLock) {
    if (Model.LockedOn == null) {
      <a asp-controller="Post" asp-action="Lock" asp-route-id="@Model.PostId" class="btn btn-warning btn-sm">Lock</a>
    } else {
      <a asp-controller="Post" asp-action="Unlock" asp-route-id="@Model.PostId" class="btn btn-warning btn-sm">Unlock</a>
    }
  }
  @if (Model.IsAuthorizedForPostEditAndDelete) {
    <a asp-controller="Post" asp-action="Delete" asp-route-id="@Model.PostId" class="btn btn-danger btn-sm">Delete</a>
  }
</div>