@model ThreadUnlockVm

@{
  ViewBag.Title = "Unlock Thread";
}

<div class="container">
  <div class="col-12 rounded my-5 bg-secondary p-5 text-light">
    <h1>Unlock: @Model.ThreadText</h1>
    <br />
    <div class="row">
      <div class="col-6">
        <p>Created by: @Model.CreatedBy</p>
        <p>Created on: @Model.CreatedOn</p>
        <p>Locked by: @Model.LockedBy</p>
        <p>Locked on: @Model.LockedOn</p>
      </div>
      <div class="col-6">
        <p>Total posts in topic: @Model.PostCount</p>
      </div>
    </div>
    <div class="row py-3">
      <div class="col-12">
        <form asp-controller="Thread" asp-action="Unlock">
          <div class="btn-group float-right">
            @Html.HiddenFor(m => m.ThreadId)
            <input type="submit" class="btn btn-danger rounded-left" value="Unlock Thread" />
            <a asp-controller="Thread" asp-action="Index" class="btn btn-warning">Back</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>