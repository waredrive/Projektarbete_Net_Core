@model ThreadCreateVm

@{
  ViewBag.Title = "Create Topic";
}

<div class="container">
  <div class="col-12 rounded my-5 bg-light p-5">
    <h1>Create Topic</h1>
    <br />

    <form asp-controller="Thread" role="form" asp-action="Create" class="form">
      <div asp-validation-summary="All" class="input-validation-error"></div>

      <div class="form-group">
        <label asp-for="ThreadText" class="col-md-2 control-label"></label>
        <div class="col-md-10">
          <textarea asp-for="ThreadText" class="form-control"></textarea>
          <span asp-validation-for="ThreadText" class="field-validation-error"></span>
        </div>
        <br />
        <div>
          <label>&nbsp;</label>
          <button type="submit" class="btn btn-primary">Create Thread</button>
        </div>
      </div>
    </form>
  </div>
</div>