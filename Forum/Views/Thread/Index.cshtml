@using Forum.Attributes
@model ThreadsIndexVm
@{
  ViewBag.Title = @Model.Topic;
}
<div class="container-fluid">
  <div class="col-md-12">
    <div class="row">
      <h1 class="text-light">@Model.Topic</h1>
    </div>
  </div>
  @if (User.Identity.IsAuthenticated && !Model.IsTopicLocked) {
    <div class="col-md-12 py-3">
      <div class="row">
        <a asp-controller="Thread" asp-action="Create" class="btn btn-primary">Add new thread</a>
      </div>
    </div>
  }
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-dark">
        @foreach (var thread in Model.Threads) {
          <tr>
            <td>
              <a asp-controller="Post" asp-action="index" asp-route-threadId="@thread.ThreadId" class="light">@thread.ThreadText</a>
            </td>
            <td>@thread.CreatedBy</td>
            <td>@thread.CreatedOn</td>
            <td><p>Replies: @thread.PostCount</p></td>
            <td>
              @if (thread.IsUserAuthorized) {
              <div class="btn-group">
                <a asp-controller="Thread" asp-action="Edit" asp-route-id="@thread.ThreadId" class="btn btn-primary btn-sm">Edit</a>
                @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Moderator)) {
                <a asp-controller="Thread" asp-action="Lock" asp-route-id="@thread.ThreadId" class="btn btn-warning btn-sm">Block</a>
                }
                <a asp-controller="Thread" asp-action="Delete" asp-route-id="@thread.ThreadId" class="btn btn-danger btn-sm">Delete</a>
              </div>
              }
            </td>
          </tr>
        }
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-light">
      OTHER STUFF
    </div>
  </div>
</div>

