@model ThreadsIndexVm
@{
  ViewBag.Title = @Model.Topic;
}
<div class="container-fluid">
  <div class="col-md-12">
    <div class="row">
      <h1 class="text-light">@Model.Topic</h1>
    </div>
  </div>
  @if (@Model.IsAuthorizedForThreadCreate) {
    <div class="col-md-12 py-3">
      <div class="row">
        <a asp-controller="Thread" asp-action="Create" class="btn btn-primary">Add new thread</a>
      </div>
    </div>
  }
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-dark">
        @foreach (var thread in Model.Threads) {
          <tr>
            <td style="width: 80px;">
              @if (thread.LockedBy != null) {
                <i class="fas fa-ban fa-3x text-danger"></i>
              } else {
                <i class="fas fa-comment fa-3x"></i>
              }
            </td>
            <td>
              <a asp-controller="Post" asp-action="index" asp-route-threadId="@thread.ThreadId" class="light">
                <p class="pb-0 mb-0">@thread.ThreadText</p>
              </a>
              <small>Started by @thread.CreatedBy, @thread.CreatedOn</small>
            </td>
            <td>
              <p>
                @thread.PostCount
                @if (thread.PostCount == 1) {<span>reply</span>} else {<span>replies</span>}
              </p>
            </td>
            <td>
              <div class="btn-group">
                @if (thread.IsAuthorizedForThreadEdit) {
                  <a asp-controller="Thread" asp-action="Edit" asp-route-id="@thread.ThreadId" class="btn btn-primary btn-sm">Edit</a>
                }
                @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Moderator)) {
                  if (thread.LockedBy == null) {
                    <a asp-controller="Thread" asp-action="Lock" asp-route-id="@thread.ThreadId" class="btn btn-warning btn-sm">Lock</a>
                  } else {
                    <a asp-controller="Thread" asp-action="Unlock" asp-route-id="@thread.ThreadId" class="btn btn-warning btn-sm">Unlock</a>
                  }
                }
                @if (thread.IsAuthorizedForThreadDelete) {
                  <a asp-controller="Thread" asp-action="Delete" asp-route-id="@thread.ThreadId" class="btn btn-danger btn-sm">Delete</a>
                }
              </div>
            </td>
          </tr>
        }
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-light">
      OTHER STUFF
    </div>
  </div>
</div>

