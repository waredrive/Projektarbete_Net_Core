@model TopicCreateVm

@{
  ViewBag.Title = "Create Topic";
}

<div class="container">
  <div class="col-12 rounded my-5 bg-light p-5">
    <h1>Create Topic</h1>
    <br />

    <form asp-controller="Topic" asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="TopicText" class="col-md-2 control-label"></label>
        <div class="col-md-10">
          <input asp-for="TopicText" class="form-control" />
          <span asp-validation-for="TopicText" class="text-danger"></span>
        </div>
        <br />
        <div>
          <label>&nbsp;</label>
          <button type="submit" class="btn btn-primary">Create Topic</button>
        </div>
      </div>
    </form>
  </div>
</div>

@section scripts {
  <partial name="_ValidationScriptsPartial" />
}