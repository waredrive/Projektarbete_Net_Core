@model TopicCreateVm

@{
  ViewBag.Title = "Create Topic";
}

<div class="container">
  <div class="col-12 rounded my-5 bg-secondary p-5 text-light">
    <h1>Create Topic</h1>
    <br />
    <form asp-controller="Topic" asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger bg-light"></div>
      <div class="form-group">
        <label asp-for="TopicText" class="control-label"></label>
        <input asp-for="TopicText" class="form-control" />
        <span asp-validation-for="TopicText" class="text-danger bg-light"></span>
      </div>
      <br />
      <div class="btn-group float-right">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Topic" asp-action="Index" class="btn btn-warning">Back</a>
      </div>
    </form>
  </div>
</div>

@section scripts {
  <partial name="_ValidationScriptsPartial" />
}