@model TopicCreateVm

@{
  ViewBag.Title = "Create Topic";
}

<div class="container">
  <div class="col-12 rounded my-5 bg-secondary p-5 text-light">
    <h1>Create Topic</h1>
    <br />
    <form asp-controller="Topic" asp-action="Create"  asp-route-returnUrl="@ViewBag.ReturnUrl" autocomplete="off">
      <div asp-validation-summary="ModelOnly"  class="text-danger bg-white rounded py-1"></div>
      <div class="form-group">
        <label asp-for="TopicText" class="control-label"></label>
        <input asp-for="TopicText" class="form-control" />
        <span asp-validation-for="TopicText"  class="text-danger bg-white rounded-bottom py-1"></span>
      </div>
      <br />
      <div class="btn-group float-right">
        <button type="submit" class="btn btn-warning">Create</button>
        <a href="@ViewBag.ReturnUrl" class="btn btn-primary">Back</a>
      </div>
    </form>
  </div>
</div>

@section scripts {
  <partial name="_ValidationScriptsPartial" />
}