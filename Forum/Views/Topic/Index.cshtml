@using Forum.Attributes
@model TopicsIndexVm
@{
  ViewBag.Title = "Forum Index";
}
<div class="container-fluid">
  <div class="col-md-12">
    <div class="row">
      <h1 class="text-light">The Best Forum Ever!</h1>
    </div>
  </div>
  @if (User.IsInRole(Roles.Admin)) {
    <div class="col-md-12 py-3">
      <div class="row">
        <a asp-controller="Topic" asp-action="Create" class="btn btn-primary">Add new topic</a>
      </div>
    </div>
  }
  <div class="row">
    <div class="col-md-8">
      <table class="table table-striped table-dark">
        @foreach (var topic in Model.Topics) {
          <tr>
            <th scope="row">ICON</th>
            <td>
              <a asp-controller="Thread" asp-action="index" asp-route-topicId="@topic.TopicId" class="light">@topic.TopicText</a>
            </td>
            <td>@topic.CreatedBy</td>
            <td>@topic.CreatedOn</td>
            <td>
              <p>Thread Count: @topic.ThreadCount</p>
              <p>Post Count: @topic.PostCount</p>
            </td>
            <td>
              @if (User.IsInRole(Roles.Admin)) {
              <div class="btn-group">
                <a asp-controller="Topic" asp-action="Edit" asp-route-id="@topic.TopicId" class="btn btn-primary btn-sm">Edit</a>
                @if (topic.LockedBy == null) {
                  <a asp-controller="Topic" asp-action="Lock" asp-route-id="@topic.TopicId" class="btn btn-warning btn-sm">Lock</a>
                } else {
                  <a asp-controller="Topic" asp-action="Unlock" asp-route-id="@topic.TopicId" class="btn btn-warning btn-sm">Unlock</a>
                }
                <a asp-controller="Topic" asp-action="Delete" asp-route-id="@topic.TopicId" class="btn btn-danger btn-sm">Delete</a>
              </div>
              }
            </td>
            <td>
              <div>
                @if (topic.LatestActiveThread != null) {
                  <a asp-controller="Post" asp-action="index" asp-route-threadId="@topic.LatestActiveThread.ThreadId" class="light">@topic.LatestActiveThread.ThreadText</a>
                  <p>By @topic.LatestActiveThread.CreatedBy</p>
                  <p>@topic.LatestActiveThread.CreatedOn</p>
                }
              </div>
            </td>
          </tr>
        }
      </table>
    </div>
    <div class="col-md-4 text-light">

      <h4 class="text-center">Latest Posts</h4>
      <table class="table table-striped table-dark">
        @foreach (var post in Model.LatestPosts) {
          <tr>
            <td>
              <a asp-controller="Post" asp-action="index" asp-route-threadId="@post.ThreadId" class="light">@post.ThreadText</a>
            </td>
            <td>@post.LatestCommenter</td>
            <td>@post.LatestCommentTime</td>
          </tr>
        }
      </table>
      <h4 class="text-center">Latest Threads</h4>
      <table class="table table-striped table-dark">
        @foreach (var thread in Model.LatestThreads) {
          <tr>
            <td>
              <a asp-controller="Post" asp-action="index" asp-route-threadId="@thread.ThreadId" class="light">@thread.ThreadText</a>
            </td>
            <td>@thread.CreatedBy</td>
            <td>@thread.CreatedOn</td>
          </tr>
        }
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-light">
      <p>Total members: @Model.TotalMembers</p>
      <p>Newest member: @Model.NewestMember</p>
      <p>Total posts: @Model.TotalPosts</p>
    </div>
  </div>
</div>

