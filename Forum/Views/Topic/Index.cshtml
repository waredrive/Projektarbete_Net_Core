@using Forum.Attributes
@model TopicsIndexVm
@{
  ViewBag.Title = "Forum Index";
}
<div class="container-fluid">
  <div class="col-md-12">
    <div class="row">
      <h1 class="text-light">The Best Forum Ever!</h1>
    </div>
  </div>
  @if (Model.IsAuthorizedForTopicCreate) {
    <div class="col-md-12 py-3">
      <div class="row">
        <a asp-controller="Topic" asp-action="Create" class="btn btn-primary">Add new topic</a>
      </div>
    </div>
  }
  <div class="row">
    <div class="col-md-8">
      <table class="table table-striped table-dark">
        @foreach (var topic in Model.Topics) {
          <tr>
            <td style="width: 80px;">
              @if (topic.LockedBy != null) {
                <i class="fas fa-ban fa-3x text-danger"></i>
              } else {
                <i class="fas fa-comments fa-3x"></i>
              }
            </td>
            <td>
              <a asp-controller="Thread" asp-action="index" asp-route-topicId="@topic.TopicId" class="light">
                <p>@topic.TopicText</p>
              </a>
            </td>
            <td>
            <td>
              <p class="pb-0 mb-0">
                <span class="font-weight-bold">@topic.ThreadCount </span>
                @if (topic.ThreadCount == 1) {<span>thread</span>} else {<span>threads</span>}
              </p>
              <p>
                <span class="font-weight-bold">@topic.PostCount</span>
                @if (topic.PostCount == 1) {<span>reply</span>} else {<span>replies</span>}
              </p>
            </td>
            <td>
              @if (@topic.IsAuthorizedForTopicEditBlockAndDelete) {
                <div class="btn-group">
                  <a asp-controller="Topic" asp-action="Edit" asp-route-id="@topic.TopicId" class="btn btn-primary btn-sm">Edit</a>
                  @if (topic.LockedBy == null) {
                    <a asp-controller="Topic" asp-action="Lock" asp-route-id="@topic.TopicId" class="btn btn-warning btn-sm">Lock</a>
                  } else {
                    <a asp-controller="Topic" asp-action="Unlock" asp-route-id="@topic.TopicId" class="btn btn-warning btn-sm">Unlock</a>
                  }
                  <a asp-controller="Topic" asp-action="Delete" asp-route-id="@topic.TopicId" class="btn btn-danger btn-sm">Delete</a>
                </div>
              }
            </td>
            <td>
              <div>
                @if (topic.LatestActiveThread != null) {
                  <a asp-controller="Post" asp-action="index" asp-route-threadId="@topic.LatestActiveThread.ThreadId" class="light">@topic.LatestActiveThread.ThreadText</a>
                  <p>By <a asp-controller="Profile" asp-action="Details" asp-route-username="@topic.LatestActiveThread.CreatedBy" class="light">@topic.LatestActiveThread.CreatedBy</a></p>
                  <p>@topic.LatestActiveThread.CreatedOn</p>
                }
              </div>
            </td>
          </tr>
        }
      </table>
    </div>
    <div class="col-md-4 text-light">

      <h4 class="text-center">Latest Posts</h4>
      <table class="table table-striped table-dark">
        @foreach (var post in Model.LatestPosts) {
          <tr>
            <td>
              <a asp-controller="Post" asp-action="index" asp-route-threadId="@post.ThreadId" class="light">@post.ThreadText</a>
            </td>
            <td>
              <a asp-controller="Profile" asp-action="Details" asp-route-username="@post.LatestCommenter" asp-route-returnUrl="@ViewBag.ReturnUrl" class="light">@post.LatestCommenter</a>
            </td>
            <td>@post.LatestCommentTime</td>
          </tr>
        }
      </table>
      <h4 class="text-center">Latest Threads</h4>
      <table class="table table-striped table-dark">
        @foreach (var thread in Model.LatestThreads) {
          <tr>
            <td>
              <a asp-controller="Post" asp-action="index" asp-route-threadId="@thread.ThreadId" class="light">@thread.ThreadText</a>
            </td>
            <td>
              <a asp-controller="Profile" asp-action="Details" asp-route-username="@thread.CreatedBy" class="light">@thread.CreatedBy</a>
            </td>
            <td>
              <a asp-controller="Profile" asp-action="Details" asp-route-username="@thread.CreatedOn" class="light">@thread.CreatedOn</a>
            </td>
          </tr>
        }
      </table>
    </div>
  </div>
  <div class="row bg-secondary mt-3">
    <div class="col-md-12 text-light">
      <div class="row pt-3">
        <div class="col-md-3">
          <p class="text-center">Total members: @Model.TotalMembers</p>
        </div>
        <div class="col-md-3 text-center">
          <p class="text-center">Newest member: <a asp-controller="Profile" asp-action="Details" asp-route-username="@Model.NewestMember" class="light">@Model.NewestMember</a> </p>
        </div>
        <div class="col-md-3 text-center">
          <p class="text-center">Most active member: <a asp-controller="Profile" asp-action="Details" asp-route-username="@Model.MostActiveMember" class="light">@Model.MostActiveMember</a></p>
        </div>
        <div class="col-md-3 text-center">
          <p class="text-center">Total posts: @Model.TotalPosts</p>
        </div>
      </div>
    </div>
  </div>
</div>

