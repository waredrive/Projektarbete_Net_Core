@model List<TopicsIndexPostVm>

<table class="table table-striped table-dark">
  @foreach (var post in Model) {
    <tr>
      <td class="align-middle">
        <a asp-controller="Post" asp-action="index" asp-route-threadId="@post.ThreadId" asp-fragment="@post.PostId" class="light">@post.ThreadText</a>
      </td>
      <td class="align-middle">
        <a asp-controller="Profile" asp-action="Details" asp-route-username="@post.LatestCommenter" asp-route-returnUrl="@ViewBag.ReturnUrl" class="light">@post.LatestCommenter</a>
      </td>
      <td class="align-middle">@post.LatestCommentTime</td>
    </tr>
  }
</table>