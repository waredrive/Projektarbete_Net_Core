@model List<TopicsIndexThreadVm>

<table class="table table-striped table-dark">
  @foreach (var thread in Model) {
    <tr>
      <td class="align-middle">
        <a asp-controller="Post" asp-action="index" asp-route-threadId="@thread.ThreadId" class="light">@thread.ThreadText</a>
      </td>
      <td class="align-middle">
        <a asp-controller="Profile" asp-action="Details" asp-route-username="@thread.CreatedBy" class="light">@thread.CreatedBy</a>
      </td>
      <td class="align-middle">
        <a asp-controller="Profile" asp-action="Details" asp-route-username="@thread.CreatedOn" class="light">@thread.CreatedOn</a>
      </td>
    </tr>
  }
      </table>