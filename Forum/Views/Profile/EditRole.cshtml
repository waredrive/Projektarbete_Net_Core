@model ProfileRoleEditVm

  <div class="container">
    <div class="col-12 rounded my-5 bg-secondary p-5 text-light">
      <h1>Edit Role For: @Model.Username</h1>
      <form asp-controller="Profile" asp-action="EditRole" asp-route-username="@Model.Username" class="mt-5">
        <h4>Current role: @Model.Role</h4>
        <br/>
        <div class="form-group">
          <label asp-for="Role" class="control-label"></label>
          <select asp-for="Role" asp-items="Model.Roles" class="form-control"></select>
          <span asp-validation-for="Role" class="text-danger bg-light"></span>
        </div>
        <br/>
        <div class="btn-group float-right">
          <button type="submit" class="btn btn-primary">Update</button>
          <a asp-controller="Profile" asp-action="Details" asp-route-username="@Model.Username" class="btn btn-warning">Back</a>
        </div>
      </form>
    </div>
  </div>