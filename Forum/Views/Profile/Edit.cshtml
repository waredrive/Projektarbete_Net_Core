@model ProfileEditVm

@{
  ViewBag.Title = "Edit Profile";
}

<div class="container">
  <div class="col-12 rounded my-5 bg-secondary p-5 text-light">
    <h1>Edit Profile</h1>
    <br />
    <form asp-controller="Profile" asp-action="Edit" asp-route-username="@User.Identity.Name" enctype="multipart/form-data">
      <div asp-validation-summary="ModelOnly" class="text-danger bg-light"></div>
      <div class="form-group">
        <label asp-for="NewUsername" class="control-label"></label>
        <input asp-for="NewUsername" class="form-control"/>
        <span asp-validation-for="NewUsername" class="text-danger bg-light"></span>
      </div>
      <div class="form-group">
        <label asp-for="ProfileImage" class="control-label"></label>
        <input asp-for="ProfileImage" accept="image/*" class="form-control">
        <small class="form-text text-light">The image must be of .jpg .gif or .png format, with the dimensions of 240x240px.</small>
        <span asp-validation-for="ProfileImage" class="text-danger bg-light"></span>
      </div>
      <br/>
      <div class="btn-group float-right">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Profile" asp-action="Details" class="btn btn-warning">Back</a>
      </div>
    </form>
  </div>
</div>

@section scripts {
  <partial name="_ValidationScriptsPartial" />
}