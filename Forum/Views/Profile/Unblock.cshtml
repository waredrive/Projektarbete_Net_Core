@model ProfileUnblockVm

<div class="container">
  <div class="col-12 rounded my-5 bg-secondary p-5 text-light">
    <h1>Unblock @Model.Username</h1>
    <form asp-controller="Profile" asp-action="Unblock" asp-route-username="@Model.Username"  asp-route-returnUrl="@ViewBag.ReturnUrl"class="mt-5">
      <div>
        <p>Blocked on: @Model.BlockedOn</p>
        <p>Blocked by: @Model.BlockedBy</p>
        <p>Blocked ending: @Model.BlockedEnd</p>
      </div>
      <br />
      <div class="btn-group float-right">
        <button type="submit" class="btn btn-warning">Unblock User</button>
        <a href="javascript:history.back()" class="btn btn-primary">Back</a>
      </div>
    </form>
  </div>
</div>

@section scripts {
  <partial name="_NoPushToBrowserHistoryScriptPartial"/>
  <partial name="_ValidationScriptsPartial" />
}