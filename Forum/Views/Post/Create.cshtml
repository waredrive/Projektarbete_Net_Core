@model PostCreateVm

@{
  ViewBag.Title = "Create Post";
}

<div class="container">
  <div class="col-12 rounded my-5 bg-secondary p-5 text-light">
    <h1>Create Post</h1>
    <br />
    <form asp-controller="Post" asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger bg-light"></div>
      <div class="form-group">
        <label asp-for="PostText" class="control-label"></label>
        <textarea asp-for="PostText" rows="10" class="form-control"></textarea>
        <span asp-validation-for="PostText" class="text-danger bg-light"></span>
      </div>
      <br />
      <div class="btn-group float-right">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Post" asp-action="Index" class="btn btn-warning">Back</a>
      </div>
    </form>
  </div>
</div>


@section scripts {
  <partial name="_ValidationScriptsPartial" />
}
