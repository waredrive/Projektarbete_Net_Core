@model PostCreateVm

@{
  ViewBag.Title = "Create Post";
}

<div class="container">
  <div class="col-12 rounded my-5 bg-light p-5">
    <h1>Create Post</h1>
    <br />

    <form asp-controller="Post" asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <div class="form-group">
        <label asp-for="PostText" class="col-md-2 control-label"></label>
        <div class="col-md-10">
          <textarea asp-for="PostText" rows="10" class="form-control"></textarea>
          <span asp-validation-for="PostText" class="text-danger"></span>
        </div>
        <br />
        <div>
          <label>&nbsp;</label>
          <button type="submit" class="btn btn-primary">Create Post</button>
        </div>
      </div>
    </form>
  </div>
</div>
@section scripts {
  <partial name="_ValidationScriptsPartial"/>
}
