@model PostsIndexVm
@{
  ViewBag.Title = @Model.Thread;
}
<div class="container-fluid">
  <div class="col-md-12">
    <div class="row">
      <h1 class="text-light">@Model.Thread</h1>
    </div>
  </div>
  @if (Model.IsAuthorizedForPostCreate) {
    <div class="col-md-12 py-3">
      <div class="row">
        <a asp-controller="Post" asp-action="Create" class="btn btn-primary">Add new post</a>
      </div>
    </div>
  }
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-dark">
        @foreach (var post in Model.Posts) {
          <tr>
            <td>
              <p>@post.PostText</p>
            </td>
            <td>@post.CreatedBy</td>
            <td>@post.CreatedOn</td>
            <td>
              <div class="btn-group">
                @if (post.IsAuthorizedForPostEditAndDelete) {
                  <a asp-controller="Post" asp-action="Edit" asp-route-id="@post.PostId" class="btn btn-primary btn-sm">Edit</a>
                }
                @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Moderator)) {
                  if (post.LockedBy == null) {
                    <a asp-controller="Post" asp-action="Lock" asp-route-id="@post.PostId" class="btn btn-warning btn-sm">Lock</a>
                  } else {
                    <a asp-controller="Post" asp-action="Unlock" asp-route-id="@post.PostId" class="btn btn-warning btn-sm">Unlock</a>
                  }
                }
                @if (post.IsAuthorizedForPostEditAndDelete) {
                  <a asp-controller="Post" asp-action="Delete" asp-route-id="@post.PostId" class="btn btn-danger btn-sm">Delete</a>
                }
              </div>
            </td>
          </tr>
        }
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-light">
      OTHER STUFF
    </div>
  </div>
</div>